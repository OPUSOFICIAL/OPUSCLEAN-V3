<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- CONFIGURAÇÃO PARA PRODUÇÃO -->
    <!-- Permite confiar no certificado SSL do domínio de produção -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">facilities.grupoopus.com</domain>
        <domain includeSubdomains="true">grupoopus.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- CONFIGURAÇÃO PARA REPLIT (Produção atual) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">replit.dev</domain>
        <domain includeSubdomains="true">picard.replit.dev</domain>
        <domain includeSubdomains="true">replit.app</domain>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </domain-config>
    
    <!-- CONFIGURAÇÃO PARA DEBUG -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="user" />
            <certificates src="system" />
        </trust-anchors>
    </debug-overrides>
    
    <!-- CONFIGURAÇÃO PADRÃO (Outros domínios) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
